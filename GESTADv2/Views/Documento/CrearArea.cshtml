@model GESTADv2.Models.DocumentoArchivo

@{
    ViewBag.Title = "CrearArea";
}

<h2>Subir Documento</h2>

@using (Html.BeginForm("ActionCrearArea", "Documento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Tipo de Documento:")
        @Html.DropDownListFor(model => model.idTipo, new SelectList(ViewBag.Areas, "idTipo", "nombreTipo"), new { @class = "form-control" })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.idTipo)</small>
    </div>

    <div class="form-group">
        @Html.Label("Nombre:")
        @Html.EditorFor(model => model.nombreDocumento, new { htmlAttributes = new { @class = "form-control" } })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.nombreDocumento)</small>
    </div>

    <div class="form-group">
        @Html.Label("Descripcion:")
        @Html.EditorFor(model => model.descripccionDocumento, new { htmlAttributes = new { @class = "form-control" } })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.descripccionDocumento)</small>
    </div>

    <div class="form-group">
        @Html.Label("Vigencia:")
        @Html.EditorFor(model => model.vigencia, new { htmlAttributes = new { @class = "form-control" } })
        <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.vigencia)</small>
    </div>

    <div class="form-group">
        <input type="file" name="DocFile" value="Seleccione un Achivo"  class="form-control"/>  
    </div>

    <input type="submit" value="Guardar" class="btn-success" />
}